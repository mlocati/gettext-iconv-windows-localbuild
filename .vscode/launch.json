{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "spit 1.0-pre2 (64-static)",
      "type": "cppdbg",
      "request": "launch",
      "externalConsole": true,
      "program": "${workspaceRoot}\\w\\64-static-debug\\src\\gettext-1.0-pre2\\build\\gettext-tools\\src\\spit.exe",
      "args": [
        "--species=ollama",
        "--url=http://localhost:11434",
        "--model=llama3.2:3b",
        "--to=it",
      ],
      "stopAtEntry": true,
      "targetArchitecture": "x64",
      "environment": [
        {
          "name": "LANG",
          "value": "it"
        }
      ],
      "MIMode": "gdb",
      "miDebuggerPath": "${workspaceRoot}\\cygwin\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
